<h1>Welcome to Facebook Groups</h1>

<% Group.all.each do |group| %>


<h1><%= group.name %> </h1>

<% group.users.each do |user| %>

<h3><%= user.first_name %> <%= user.last_name %></h3>
<% end %>
<% group.posts.each do |post| %>
<%= post.content %> - <%= post.user.first_name %> <br>

<% post.comments.each do |comment| %>
<%= comment.content %> <%= comment.user.first_name %> <br>
<% end %>

<% end %>

<% end %>
